@using System.Globalization
@model DateTime?

@{
    // The datepicker plugin uses slightly different date formats than .NET. E.g MM/dd/yyyy needs to be mm/dd/yyyy    
    var htmlAttributes = new Dictionary<string, object> {{"data-date-format", CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()}, 
                                                         {"class", "input-small"}};

}
@Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, htmlAttributes)